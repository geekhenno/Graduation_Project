<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:src="@drawable/logo1"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"


            >
            <com.rilixtech.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:ccp_textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                app:ccp_countryPreference="SA,JO"


                />



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/phone_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:gravity="left"
            android:imeOptions="actionNext"
            android:textSize="20dp"
            android:inputType="number"
            android:maxLength="12"

            />
    </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:gravity="left"

            android:imeOptions="actionNext"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/repassword_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:gravity="left"
            android:imeActionId="1"

            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="45dp"
            >


        <Button
            android:id="@+id/register"
            android:onClick="register"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:fontFamily="@font/sukarregular"
            android:textSize="20dp"
            android:background="@drawable/login_button"


            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <TextView

                android:id="@+id/go_to_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#006064"

                android:fontFamily="@font/sukarregular"
                android:text="Already hava an account? " />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textColor="@color/colorTextDark"
                android:clickable="true"
                android:textStyle="bold"
                android:fontFamily="@font/sukarregular"
                android:textSize="15dp"
                android:onClick="signin"
                />
        </LinearLayout>
    </TableLayout>



    </ScrollView>



</LinearLayout>